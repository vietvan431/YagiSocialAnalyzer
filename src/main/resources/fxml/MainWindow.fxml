<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yagi.socialanalyzer.ui.controllers.MainController"
            prefWidth="1200" prefHeight="800">
    
    <!-- Menu Bar -->
    <top>
        <VBox>
            <MenuBar>
                <Menu text="%menu.file">
                    <MenuItem text="%menu.file.new" fx:id="newProjectMenuItem" 
                             onAction="#handleNewProject"/>
                    <MenuItem text="%menu.file.open" fx:id="openProjectMenuItem" 
                             onAction="#handleOpenProject"/>
                    <MenuItem text="%menu.file.save" fx:id="saveProjectMenuItem" 
                             onAction="#handleSaveProject" disable="true"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="%menu.file.import" fx:id="importMenuItem" 
                             onAction="#handleImport"/>
                    <MenuItem text="%menu.file.export" fx:id="exportMenuItem" 
                             onAction="#handleExport" disable="true"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="%menu.file.exit" fx:id="exitMenuItem" 
                             onAction="#handleExit"/>
                </Menu>
                
                <Menu text="%menu.edit">
                    <MenuItem text="%menu.edit.preferences" fx:id="preferencesMenuItem" 
                             onAction="#handlePreferences"/>
                </Menu>
                
                <Menu text="%menu.view">
                    <MenuItem text="%menu.view.projects" fx:id="viewProjectsMenuItem" 
                             onAction="#handleViewProjects"/>
                    <MenuItem text="%menu.view.collection" fx:id="viewCollectionMenuItem" 
                             onAction="#handleViewCollection" disable="true"/>
                    <MenuItem text="%menu.view.analysis" fx:id="viewAnalysisMenuItem" 
                             onAction="#handleViewAnalysis" disable="true"/>
                </Menu>
                
                <Menu text="%menu.settings">
                    <MenuItem text="%menu.settings.platforms" fx:id="platformsMenuItem" 
                             onAction="#handlePlatformSettings"/>
                    <MenuItem text="%menu.settings.credentials" fx:id="credentialsMenuItem" 
                             onAction="#handleCredentialSettings"/>
                </Menu>
                
                <Menu text="%menu.help">
                    <MenuItem text="%menu.help.documentation" fx:id="documentationMenuItem" 
                             onAction="#handleDocumentation"/>
                    <MenuItem text="%menu.help.about" fx:id="aboutMenuItem" 
                             onAction="#handleAbout"/>
                </Menu>
            </MenuBar>
        </VBox>
    </top>
    
    <!-- Content Area -->
    <center>
        <StackPane fx:id="contentArea">
            <Label text="Welcome to Yagi Social Media Analyzer" 
                   style="-fx-font-size: 18px; -fx-text-fill: #555;"/>
        </StackPane>
    </center>
    
    <!-- Status Bar -->
    <bottom>
        <HBox styleClass="status-bar" spacing="10" alignment="CENTER_LEFT">
            <Label fx:id="statusLabel" text="Ready"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="connectionLabel" text=""/>
        </HBox>
    </bottom>
    
</BorderPane>
